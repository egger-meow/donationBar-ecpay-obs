# ===========================================
# ENVIRONMENT & DATABASE
# ===========================================
# Environment mode: sandbox (local JSON file), development, production (PostgreSQL)
ENVIRONMENT=sandbox

# PostgreSQL Database URL (for production)
# Leave empty to use local db.json file
# Format: postgresql://username:password@host:port/database
DATABASE_URL=

# Node environment
NODE_ENV=development

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
BASE_URL=http://localhost:3000

# ===========================================
# SECURITY & SESSION
# ===========================================
# Generate secure random keys using:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# Session secret for cookie signing (change in production!)
SESSION_SECRET=your-session-secret-key-change-this-in-production

# Encryption key for sensitive data (must be 32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key!!

# JWT secret for token authentication
JWT_SECRET=your-jwt-secret-key-change-this
JWT_EXPIRES_IN=7d

# ===========================================
# ADMIN USER SETUP (For Migration)
# ===========================================
# These credentials are used to create the initial admin user during migration
# CHANGE THESE BEFORE RUNNING MIGRATION!

ADMIN_EMAIL=admin@localhost
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123
ADMIN_DISPLAY_NAME=System Administrator

# ===========================================
# OAUTH - GOOGLE (Optional)
# ===========================================
# Get credentials from: https://console.cloud.google.com/
# Enable Google+ API and create OAuth 2.0 Client ID

GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# ===========================================
# OAUTH - GITHUB (Optional)
# ===========================================
# Get credentials from: https://github.com/settings/developers

# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret
# GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
# For password reset and email verification
# Gmail users: Use app-specific password (not regular password)

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
EMAIL_FROM=noreply@yourdomain.com

# ===========================================
# PAYMENT PROVIDERS (Legacy - Now in Database)
# ===========================================
# NOTE: ECPay credentials are now stored in the database per workspace
# These are kept for backward compatibility during migration only
# After migration, configure ECPay in the admin panel per workspace

MERCHANT_ID=your_merchant_id_here
HASH_KEY=your_hash_key_here
HASH_IV=your_hash_iv_here

# ===========================================
# SUBSCRIPTION BILLING (Optional)
# ===========================================
# For subscription plan payments (if using Stripe)

# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# FEATURE FLAGS (Optional)
# ===========================================
# ENABLE_OAUTH=true
# ENABLE_EMAIL_VERIFICATION=false
# ENABLE_API_KEYS=true
# ENABLE_AUDIT_LOGS=true
